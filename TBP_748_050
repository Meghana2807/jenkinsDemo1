# Student Registration System

class Student:
    def __init__(self, student_id, name, age, course):
        self.student_id = student_id
        self.name = name
        self.age = age
        self.course = course

    def __str__(self):
        return f"Student ID: {self.student_id}, Name: {self.name}, Age: {self.age}, Course: {self.course}"

class StudentRegistrationSystem:
    def __init__(self):
        self.students = {}

    def register_student(self):
        print("Register New Student")

        student_id = input("Enter Student ID: ")
        if student_id in self.students:
            print("Student ID already exists. Please try again with a different ID.")
            return

        name = input("Enter Student Name: ")
        age = int(input("Enter Student Age: "))
        course = input("Enter Course Name: ")

        student = Student(student_id, name, age, course)
        self.students[student_id] = student
        print(f"Student {name} has been successfully registered!")

    def display_students(self):
        if not self.students:
            print("No students registered.")
        else:
            print("\nList of Registered Students:")
            for student in self.students.values():
                print(student)

    def find_student(self, student_id):
        if student_id in self.students:
            print(self.students[student_id])
        else:
            print(f"No student found with ID {student_id}")

    def delete_student(self, student_id):
        if student_id in self.students:
            del self.students[student_id]
            print(f"Student with ID {student_id} has been deleted.")
        else:
            print(f"No student found with ID {student_id}")


def main():
    system = StudentRegistrationSystem()

    while True:
        print("\nStudent Registration System Menu:")
        print("1. Register a New Student")
        print("2. Display All Students")
        print("3. Find a Student by ID")
        print("4. Delete a Student by ID")
        print("5. Exit")

        choice = input("Choose an option (1-5): ")

        if choice == '1':
            system.register_student()
        elif choice == '2':
            system.display_students()
        elif choice == '3':
            student_id = input("Enter Student ID to find: ")
            system.find_student(student_id)
        elif choice == '4':
            student_id = input("Enter Student ID to delete: ")
            system.delete_student(student_id)
        elif choice == '5':
            print("Exiting the system.")
            break
        else:
            print("Invalid option. Please try again.")

if __name__ == "__main__":
    main()

